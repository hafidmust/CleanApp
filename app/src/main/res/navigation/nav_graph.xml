<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/HomeMainFragment">

    <fragment
        android:id="@+id/HomeMainFragment"
        android:name="com.hafidmust.mycleanapp.presentation.main.home.HomeMainFragment"
        android:label="@string/main_fragment_home"
        tools:layout="@layout/fragment_main_home">

        <action
            android:id="@+id/action_home_to_detail"
            app:destination="@id/DetailMainFragment" />
        <action
            android:id="@+id/action_home_to_create"
            app:destination="@id/CreateMainFragment" />

    </fragment>
    <fragment
        android:id="@+id/DetailMainFragment"
        android:name="com.hafidmust.mycleanapp.presentation.main.detail.DetailMainFragment"
        android:label="@string/main_fragment_detail"
        tools:layout="@layout/fragment_main_detail">

        <action
            android:id="@+id/action_detail_to_home"
            app:launchSingleTop="true"
            app:popUpTo="@id/nav_graph"
            app:popUpToInclusive="true"
            app:destination="@id/HomeMainFragment"/>

    </fragment>
    <fragment
        android:label="@string/main_fragment_create"
        android:name="com.hafidmust.mycleanapp.presentation.create.CreateMainFragment"
        android:id="@+id/CreateMainFragment"
        tools:layout="@layout/fragment_main_create">

        <action
            android:id="@+id/action_create_to_home"
            app:launchSingleTop="true"
            app:popUpTo="@id/nav_graph"
            app:popUpToInclusive="true"
            app:destination="@id/HomeMainFragment"/>
    </fragment>
</navigation>